<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginBottom="15dp"
        android:id="@+id/cameraTypeLabelTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="PILIH PAKET FOTOGRAFER ATAU LENSA:"
        android:textSize="18sp"
        android:textStyle="bold" />



    <RadioGroup
        android:id="@+id/shapeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/shapeRound"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:text="Fotografer 1 Lensa High" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fotografer1" />

        <RadioButton
            android:id="@+id/radioButtonFotografer2"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:text="Fotografer 2 Lensa Medium" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fotografer2" />

    </RadioGroup>

    <EditText
        android:id="@+id/etTanggal"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:hint="Tanggal" />

    <EditText
        android:id="@+id/etDurasi"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:hint="Durasi (jam)"
        android:inputType="number"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/cameraTypeLabelTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="PILIH CAMERA TANPA FOTOGRAFER:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <RadioGroup
        android:id="@+id/cameraTypeRadioGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_dslr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DSLR" />

        <RadioButton
            android:id="@+id/radio_mirrorless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mirrorless" />

        <RadioButton
            android:id="@+id/radio_action_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action Camera" />

        <RadioButton
            android:id="@+id/radio_drone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drone" />


        <TextView
            android:id="@+id/tvBiaya"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Total Biaya : "
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBiaya"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Bayar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSewa"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Sewa" />

            <Button
                android:id="@+id/btnBatal"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Batal" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvKonfirmasi"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RadioGroup>

</LinearLayout>