<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_PemesananFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="5dp"
                android:text="Makanan"
                android:textSize="20dp"
                android:textStyle="bold" />

            <!-- Repeat this block for 3 Makanan items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/makanan_0"
                    layout="@layout/item_makanan" />
                <include
                    android:id="@+id/makanan_1"
                    layout="@layout/item_makanan" />
                <include
                    android:id="@+id/makanan_2"
                    layout="@layout/item_makanan" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="5dp"
                android:text="Minuman"
                android:textSize="20dp"
                android:textStyle="bold" />

            <!-- Repeat this block for 3 Minuman items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/minuman_0"
                    layout="@layout/item_minuman" />
                <include
                    android:id="@+id/minuman_1"
                    layout="@layout/item_minuman" />
                <include
                    android:id="@+id/minuman_2"
                    layout="@layout/item_minuman" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_total_harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Total Harga: Rp. 0"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="#FF6200EE"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:layout_marginBottom="90dp"/>
</FrameLayout>
